@font-face {
    font-family: "{{ fontName }}";
    src: {{{ src }}};
}

.icon {
    line-height: 1;
	display: inline-block;
}

.icon:before {
    font-family: {{fontName}} !important;
    font-style: normal;
    font-weight: normal !important;
    vertical-align: top;
}

{{# each codepoints }}
.icon--{{ @key }}:before {
    content: "\\{{ this }}";
}
{{/ each }}
